#include <iostream>
#include <vector>

using namespace std;

int main()
{
	vector <int>numbers;
	int k = 0; //something wrong with input data!
	int f_max = 0;
	int f_min = 0;

	cin >> k; // cycle with appending cycle

	numbers.push_back(k);

	for (int i = 0; i <= numbers.size(); i++)
	{
		if (i % 2 == 0)
			if (f_max < numbers[i])
				f_max = numbers[i];
		else if (i % 2 == 1)
			if (f_min > numbers[i])
				f_min = numbers[i];
	}
	cout << f_min + f_max << endl;
}
